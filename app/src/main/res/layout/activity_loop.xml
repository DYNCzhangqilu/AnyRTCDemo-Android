    android:layout_height="match_parent"
    tools:context="org.anyrtc.anyrtc.LoopActivity" >

    <android.opengl.GLSurfaceView
        android:id="@+id/glview_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button android:id="@+id/btn_loop" android:layout_width="wrap_content"
