<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnyRTCMeetActivity">

    <RelativeLayout
        android:id="@+id/relaytive_videos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>


    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_pub_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_voice"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="10dp"
                android:background="@drawable/btn_voice_on"
                android:onClick="OnBtnClicked" />

            <Button
                android:id="@+id/btn_camera"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="10dp"
                android:background="@drawable/btn_camera_on"
                android:onClick="OnBtnClicked" />

            <Button
                android:id="@+id/btn_camera_switch"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="10dp"
                android:background="@drawable/btn_camera_switch"
                android:onClick="OnBtnClicked" />

            <Button
                android:id="@+id/btn_leave"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="10dp"
                android:background="@drawable/btn_hang_up"
                android:onClick="OnBtnClicked" />

            <Button
                android:id="@+id/btn_switch_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="OnBtnClicked"
                android:text="换房间"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>